echo " [1] Scan a single IP	nmap 192.168.1.1"
echo " [2] Scan a host	nmap www.testhostname.com"
echo " [3] Scan a range of IPs	nmap 192.168.1.1-20"
echo " [4] Scan a subnet	nmap 192.168.1.0/24"
