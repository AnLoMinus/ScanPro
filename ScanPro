your_choice(){
  echo "\n${cyan}  |"
  echo "  |${cafe} [#] Basic Information"
  echo "${cyan}  |-----------------------------"
  echo "${cyan}  |${green} [!] Your Host Target is:${cafe} $host"
  echo "${cyan}  |${green} [!] Your Port Target is:${cafe} $port"
  echo "${cyan}  |-----------------------------"
  echo "${cyan}  |"
}

prcscn(){
